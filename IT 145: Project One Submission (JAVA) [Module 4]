public class Pet {

	private static String petType;   // Private variables for Pet class
	private static String petName;
	private static int petAge;
	private static int dogSpaces;
	private static int catSpaces;
	private static int daysStay;
	private static double amountDue;
	
	public Pet() {	 // Main Constructor
		petAge = 0;
		petName = "";
		petType = "";
		dogSpaces = 30;
		catSpaces = 12;
		amountDue = 0;
		daysStay = 0;
	}

	public Pet(String type, String name, int age, int dog, int cat, int stay, double amount) {   // Constructor to initialize variables
		petType = type;
		petName = name;
		petAge = age;
		dogSpaces = dog;
		catSpaces = cat;
		daysStay = stay;
		amountDue = amount;
	}	
	
	public static void setPetType(String type) {	// Setters for Pet class 
		petType = type;
	}
	public static void setPetName(String name) {
		petName = name;
	}
	public static void setPetAge(int age) {
		petAge = age;
	}
	public static void setDogSpaces(int dog) {
		dogSpaces = dog;
	}
	public static void setCatSpaces(int cat) {
		catSpaces = cat;
	}
	public static void setDaysStay(int stay) {
		daysStay = stay;
	}
	public static void setAmountDue(double amount) {
		amountDue = amount;
	}
	
	public static String getPetType() {	// Getters for Pet class 
		return petType;
	}
	public static String getPetName() {
		return petName;
	}
	public static int getPetAge() {
		return petAge;
	}
	public static int getDogSpaces() {
		return dogSpaces;
	}
	public static int getCatSpaces() {
		return catSpaces;
	}
	public static int getDaysStay() {
		return daysStay;
	}
	public static double getAmountDue() {
		return amountDue;
	}
}
